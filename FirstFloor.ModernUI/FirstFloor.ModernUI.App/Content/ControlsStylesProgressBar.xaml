<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI" x:Class="FirstFloor.ModernUI.App.Content.ControlsStylesProgressBar" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel Width="240" HorizontalAlignment="Left">

            <TextBlock Text="UPDATE" Style="{StaticResource Heading2}" Margin="0,0,0,80" />
            <Button Content="UPDATE AND INSTALL NOW" Margin="10,0,10,10" Click="Button_Click" Height="33" />


            <ProgressBar x:Name="updatebar" Minimum="0" Maximum="1" Height="18" IsIndeterminate="false" Margin="0,0,0,25" ValueChanged="ProgressBar_ValueChanged" />
            <Button x:Name="btn_Install" Content="INSTALL MODS" Margin="10,0,10,10" Click="Button_Click2" Height="33" IsEnabled="False" />
            <mui:ModernProgressRing HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        </StackPanel>
    </Grid>
</UserControl>
